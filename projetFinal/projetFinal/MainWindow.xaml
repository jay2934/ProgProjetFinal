<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="projetFinal.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:projetFinal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <NavigationView PaneDisplayMode="Left" PaneTitle="Gestionnaire de projets" x:Name="navView">
            <NavigationView.MenuItems>
                <NavigationViewItemHeader Content="Ajout"/>
                <NavigationViewItem Content="Propriétaire" x:Name="addProprio" Icon="AddFriend"/>
                <NavigationViewItem Content="Maison" x:Name="addMaison" Icon="Home"/>
                <NavigationViewItemSeparator />
                <NavigationViewItemHeader Content="Affichage"/>
                <NavigationViewItem Content="Propriétaires" x:Name="showProprio" Icon="People"/>
                <NavigationViewItem Content="Maisons" x:Name="showMaison" Icon="Street"/>
            </NavigationView.MenuItems>
            <Frame x:Name="mainFrame"/>
        </NavigationView>
    </Grid>
</Window>
