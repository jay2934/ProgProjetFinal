<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="projetFinal.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:projetFinal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="GridPrincipal">
        <NavigationView PaneDisplayMode="Left" PaneTitle="Gestionnaire de projets" x:Name="navView" SelectionChanged="navView_SelectionChanged" IsSettingsVisible="False">
            <NavigationView.MenuItems>
                <NavigationViewItem Content="Employés" x:Name="navEmployes" Icon="People"/>
                <NavigationViewItem Content="Clients" x:Name="navClients" Icon="Shop"/>
                <NavigationViewItem Content="Projets" x:Name="navProjets" Icon="Library"/>
            </NavigationView.MenuItems>
            <NavigationView.FooterMenuItems>
                <NavigationViewItem Content="Connexion" x:Name="navConnexion" Icon="Account"/>
                <NavigationViewItem Content="Déconnection" x:Name="navDeconnection" Icon="Permissions"/>
            </NavigationView.FooterMenuItems>
            <Frame x:Name="mainFrame" Navigated="mainFrame_Navigated"/>
        </NavigationView>
    </Grid>
</Window>
