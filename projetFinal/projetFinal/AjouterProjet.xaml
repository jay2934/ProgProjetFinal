<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="projetFinal.AjouterProjet"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:projetFinal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <AutoSuggestBox TextChanged="AutoSuggestBox_TextChanged"
                SuggestionChosen="AutoSuggestBox_SuggestionChosen"
                Width="300" AutomationProperties.Name="Basic AutoSuggestBox" 
                Header="Client associé au projet" x:Name="autoSuggBoxClient"/>

            <TextBox x:Name="tbxTitreProjet">
                <TextBox.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Foreground="Black">Titre</TextBlock>
                        <TextBlock x:Name="headTitreProjet" Foreground="Red"></TextBlock>
                    </StackPanel>
                </TextBox.Header>
            </TextBox>


            <DatePicker x:Name="tbxDateProjet">
                <DatePicker.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Foreground="Black">Date de début</TextBlock>
                        <TextBlock x:Name="headDateProjet" Foreground="Red"></TextBlock>
                    </StackPanel>
                </DatePicker.Header>
            </DatePicker>

            <TextBox x:Name="tbxDescriptionProjet">
                <TextBox.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Foreground="Black">Description</TextBlock>
                        <TextBlock x:Name="headDescriptionProjet" Foreground="Red"></TextBlock>
                    </StackPanel>
                </TextBox.Header>
            </TextBox>
            
            <NumberBox x:Name="nbxBudgetProjet"
                        Value="10000"
                        SpinButtonPlacementMode="Compact"
                        SmallChange="10"
                        LargeChange="100">
                <NumberBox.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Foreground="Black">Budget</TextBlock>
                        <TextBlock x:Name="headBudgetProjet" Foreground="Red"></TextBlock>
                    </StackPanel>
                </NumberBox.Header>
            </NumberBox>

            <NumberBox x:Name="nbxNbEmployeProjet"                        
                       Value="10000"
                       SpinButtonPlacementMode="Compact"
                       SmallChange="1"
                       LargeChange="1"
                       Maximum="5"
                       Minimum="1">
                <NumberBox.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Foreground="Black">Nombre d'employé</TextBlock>
                        <TextBlock x:Name="headNbrEmployeProjet" Foreground="Red"></TextBlock>
                    </StackPanel>
                </NumberBox.Header>
            </NumberBox>
        </StackPanel>
    </Grid>
</ContentDialog>
